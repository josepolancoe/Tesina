<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnunciarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/anunciar_foto_perfil"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="20sp"
                    android:src="@drawable/img_user"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#ffffff"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/anunciar_nombre_anfitrion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Nombre Anfitrion"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/anunciar_telefono_anfitrion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccione el tipo de Aljamiento:"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/rb_grupo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_anunciar_departamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Departamento" />

                    <RadioButton
                        android:id="@+id/rb_anunciar_casa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Casa" />

                    <RadioButton
                        android:id="@+id/rb_anunciar_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hotel Boutique" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Se reservará: "
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/rb_grupo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_anunciar_alojamiento_entero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alojamiento entero" />

                    <RadioButton
                        android:id="@+id/rb_anunciar_habitacion_privada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Habitación privada" />
                </RadioGroup>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <EditText
                    android:id="@+id/anunciar_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:hint="Describe lo que pasó"
                    android:inputType="text|textMultiLine"
                    android:padding="5dp"
                    android:gravity="top"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_anunciar_foto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seleccionar Foto"
                            android:padding="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/anunciar_foto"
                            android:layout_width="150sp"
                            android:layout_height="150sp"
                            android:paddingLeft="20dp"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_anunciar_publicar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publicar Denuncia"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>